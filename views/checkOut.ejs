<!-- Submit Button -->
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary" id="submitOrderBtn">Submit Order</button>
    </div>

    <!-- JavaScript code to handle the button click and show pop-up -->
    <script>
        // Wait for the document to be fully loaded
        document.addEventListener("DOMContentLoaded", function() {
            // Get the submit button element
            var submitBtn = document.getElementById("submitOrderBtn");

            // Hide the submit button initially
            submitBtn.style.display = "none";

            // Add a click event listener to the "Yes" button
            document.getElementById('yesButton').addEventListener('click', function() {
                // Show the submit button when the user chooses "Yes"
                submitBtn.style.display = "block";

                // Show the billing, user, and shipping sections
                document.getElementById('billingSection').style.display = 'block';
                document.getElementById('shippingSection').style.display = 'block';
                document.getElementById('userSection').style.display = 'block';
            });

            // Add a click event listener to the submit button
            submitBtn.addEventListener("click", function() {
                // Check if all required fields are filled out
                var areFieldsFilled = checkRequiredFields();

                // If all fields are filled out, show the pop-up with "Order Confirmed" message
                if (areFieldsFilled) {
                    alert("Order Confirmed");

                    // Ask the user if they want to go to the home page
                    var goToHomePage = confirm("Do you want to go to the home page?");

                    // If the user confirms, redirect to the home page
                    if (goToHomePage) {
                        window.location.href = "Home.html";
                    }
                } else {
                    // If not all fields are filled out, show a pop-up with "Missing information" message
                    alert("Missing information");
                }
            });

            // Function to check if all required fields are filled out
            function checkRequiredFields() {
                // Get all form elements
                var formElements = document.querySelectorAll("input, select");

                // Loop through each form element
                for (var i = 0; i < formElements.length; i++) {
                    // Check if the element is required and if it is empty
                    if (formElements[i].hasAttribute("required") && formElements[i].value.trim() === "") {
                        // Return false if any required field is empty
                        return false;
                    }
                }

                // If all required fields are filled out, return true
                return true;
            }
        });
    </script>


